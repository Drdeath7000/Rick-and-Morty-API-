<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav.xml"
    app:startDestination="@id/allCharactersFragment">

    <fragment
        android:id="@+id/allCharactersFragment"
        android:name="il.co.syntax.finalkotlinproject.ui.all_characters.AllCharactersFragment"
        android:label="characters_fragment"
        tools:layout="@layout/characters_fragment" >
        <action
            android:id="@+id/action_allCharactersFragment_to_singleCharacterFragment"
            app:destination="@id/singleCharacterFragment" />
    </fragment>
    <fragment
        android:id="@+id/singleCharacterFragment"
        android:name="il.co.syntax.finalkotlinproject.ui.single_character.SingleCharacterFragment"
        android:label="character_detail_fragment"
        tools:layout="@layout/character_detail_fragment" >
        <action
            android:id="@+id/action_singleCharacterFragment_to_favorites"
            app:destination="@id/favorites" />
    </fragment>
    <fragment
        android:id="@+id/favorites"
        android:name="il.co.syntax.finalkotlinproject.ui.Favorites"
        android:label="favorites"
        tools:layout="@layout/favorites" >
        <action
            android:id="@+id/action_favorites_to_singleCharacterFragment"
            app:destination="@id/singleCharacterFragment" />
    </fragment>
    <fragment
        android:id="@+id/about"
        android:name="il.co.syntax.finalkotlinproject.ui.About"
        android:label="about_fragment"
        tools:layout="@layout/about_fragment" />
</navigation>